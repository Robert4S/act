actor sum {
	state acc: Num;

	initialiser {
		send(call_me, sum);
		return 0;
	}

	update (num: Num) {
		if (num <= 0) {
			intrinsic(print_value, acc);
			intrinsic(print_value, "\n");
			return acc;
		};
		send(call_me, sum);
		return acc + num;
	}
}

actor call_me {
	state not_mine: Num;

	initialiser {
		return 10000;
	}
	
	update (who: Pid(Num)) {
		send(who, not_mine);
		return not_mine - 1;
	}
}
